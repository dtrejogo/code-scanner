<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="189dp"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/green_actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="314dp"
            android:layout_height="180dp"
            android:layout_weight="0.50" >

            <RelativeLayout
                android:id="@+id/transparent_box"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:background="#A6FFFFFF"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="3 paquetes de doritos 20$"
                    android:textColor="#D82F36"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/title"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/usericon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/iconousuario" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Patricio Cornejo"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/usericon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/iconoubicacionusuario" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Supermercado Rey Via Espana"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/edit_offer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/green_offer_side_button"
                android:src="@drawable/btnofertasdenunciar" />

            <ImageButton
                android:id="@+id/share_offer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/green_offer_side_button"
                android:src="@drawable/btnofertasshare" />

            <ImageButton
                android:id="@+id/check_offer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/selector_list_offer_background_check_button"
                android:src="@drawable/selector_list_offer_icon_check_button" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_actionbar" />

</LinearLayout> <!-- http://stackoverflow.com/questions/2256884/android-device-chooser-device-not-showing-up -->
